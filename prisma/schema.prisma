// prisma/schema.prisma

generator client {
  provider = "prisma-client"
  // Path output-nya kita arahin ke 'app' biar rapi
  output   = "../app/generated/prisma" 
}

datasource db {
  provider = "postgresql"
  // Ini otomatis ngambil dari .env elo, aman
  url      = env("POSTGRES_PRISMA_URL") 
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

// Enum baru dari repo 'master'
enum SportType {
  FUTSAL
  BASKETBALL
  BADMINTON
  MINI_SOCCER
  TENNIS
}

// Model 'Room' diganti jadi 'Field'
model Field {
  id          String   @id @default(cuid())
  name        String
  description String   @db.Text
  image       String
  pricePerHour Int     // <-- Ganti dari price
  capacity    Int      @default(1)
  type        SportType // <-- Field baru
  address     String?     // <-- Field baru
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  FieldAmenities FieldAmenities[]
  Reservation    Reservation[]
}

model Amenities {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  FieldAmenities FieldAmenities[]
}

// Model 'RoomAmenties' jadi 'FieldAmenities'
model FieldAmenities {
  id          String @id @default(cuid())
  fieldId     String
  amenitiesId String

  Field     Field     @relation(fields: [fieldId], references: [id], onDelete: Cascade)
  Amenities Amenities @relation(fields: [amenitiesId], references: [id], onDelete: Cascade)
}

model Reservation {
  id        String   @id @default(cuid())
  startDate DateTime
  endDate   DateTime
  price     Int
  userId    String
  fieldId   String // <-- Ganti dari roomId

  User    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  Field   Field    @relation(fields: [fieldId], references: [id], onDelete: Cascade) // <-- Ganti dari Room
  Payment Payment?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Payment {
  id            String      @id @default(cuid())
  method        String?
  amount        Int
  status        String      @default("unpaid")
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  reservationId String      @unique
  Reservation   Reservation @relation(fields: [reservationId], references: [id], onDelete: Cascade)
}

// Model User & Account (tetep sama, auth aman)
model User {
  id            String        @id @default(cuid())
  name          String?
  email         String        @unique
  emailVerified DateTime?
  image         String?
  role          String        @default("user")
  phone         String?
  accounts      Account[]
  Reservation   Reservation[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}